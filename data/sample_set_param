\x1E	sample_set_param	Sample Parameter Set
\x01	Set Group ID	BYTE

\x20	Set Trim Start	QWORD

\x21	Set Trim End	QWORD

\x22	Set Trim Length	QWORD

\x24	Set Original Pitch	BYTE

\x25	Set Cents Tune	SWORD

\x26	Set Playback Mode, where <Data1> = (0=NO LOOPING, 1=LOOPING, 2=ONE SHOT)

\x30	Set Loop Start <Data1> = loop index	BYTE	QWORD

\x31	Set Loop End	BYTE	QWORD

\x32	Set Loop Length	BYTE	QWORD

\x33	Set Loop Lock <Data1> = (0=OFF, 1=ON)	BYTE	BYTE

\x34	Set Loop Tune (0­±50)	BYTE	SBYTE

\x35	Set Loop Direction <Data1> = (0=FORWARDS, 1=ALTERNATING)	BYTE	BYTE

\x36	Set Loop Type <Data1> = (0=LOOP IN REL, 1=LOOP UNTIL REL)	BYTE	BYTE

\x37	Set Number of Loop Repetitions (0=INFINITE)	BYTE	BYTE

\x40	Set Region Start <Data1> = Region Num, <Data2> = start	BYTE	QWORD

\x41	Set Region End <Data1> = Region Num <Data2> = end	BYTE	QWORD

\x42	Set Region Length <Data1> = Region Num <Data2> = length	BYTE	QWORD

